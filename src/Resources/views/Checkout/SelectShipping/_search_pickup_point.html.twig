<div class="pickup-points-search">
    <div class="pickup-points-search-form ui form">
        <div class="pickup-points-input">
            {{ form_start(form, {'attr': {'class': 'search-pickup-point-form'}}) }}
            {{ form_row(form.zipCode) }}
            {{ form_row(form.types) }}
            <button title="{{ 'sylius.mondial_relay.search'|trans }}" type="submit" class="ui primary button">{{ 'sylius.mondial_relay.search'|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="pickup-points-map"></div>
    <div class="pickup-points-search-results">
        <div class="pickup-points-no-results" style="display: none;">{{ 'sylius.mondial_relay.no_result_for_your_search'|trans }}</div>
        <div
                class="pickup-points-results-list"
                data-choose-label="{{ 'sylius.mondial_relay.choose_relay_point'|trans }}"
                data-show-label="{{ 'sylius.mondial_relay.show_on_map'|trans }}"
                data-logo="/bundles/sherlockodesyliusmondialrelayplugin/images/mondial-relay-logo.png"
        ></div>
    </div>
</div>
