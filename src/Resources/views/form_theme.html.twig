{% block _sylius_checkout_select_shipping_shipments_entry_method_entry_widget %}
    {% if form.vars.attr['data-mr'] is defined %}
        {% include '@SherlockodeSyliusMondialRelayPlugin/Checkout/_pickup_point_form_widget.html.twig' with {'form': form.parent.parent} only %}
        <div id="current-pickup-point" class="mr-current-pickup-point-card" style="display: none;">
            <button data-load-pickup-point-list type="button">{{ 'sylius.mondial_relay.select_a_relay_point'|trans }}</button>
        </div>
    {% endif %}
    <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{% endblock %}
